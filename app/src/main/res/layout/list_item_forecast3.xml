<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="7dp"
    android:scrollbars="none">

    <ImageView
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:id="@+id/image_view"
        android:src="@drawable/ic_clear"
        android:paddingLeft="10dp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/image_view"
        android:id="@+id/list_item_forecast_textview"
        android:gravity="center_vertical"
        android:text="Text"
        android:textStyle="bold"
        android:layout_alignTop="@+id/image_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Text"
        android:id="@+id/list_item_desc_forecast_textview"
        android:layout_below="@+id/list_item_forecast_textview"
        android:layout_alignLeft="@+id/list_item_forecast_textview"
        android:layout_alignStart="@+id/list_item_forecast_textview"
        android:textColor="#00a3cc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        android:text="Text"
        android:textStyle="italic|bold"
        android:id="@+id/list_item_temp_forecast_textview"
        android:layout_alignLeft="@+id/list_item_desc_forecast_textview"
        android:layout_below="@+id/list_item_desc_forecast_textview"
        android:layout_toEndOf="@+id/image_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:text="Text"
        android:textStyle="normal"
        android:id="@+id/list_item_wind_speed_forecast_textview"
        android:layout_alignLeft="@+id/list_item_desc_forecast_textview"
        android:layout_below="@+id/list_item_temp_forecast_textview"
        android:layout_toEndOf="@+id/image_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:text="Text"
        android:textStyle="normal"
        android:id="@+id/list_item_wind_direction_forecast_textview"
        android:layout_alignLeft="@+id/list_item_desc_forecast_textview"
        android:layout_below="@+id/list_item_wind_speed_forecast_textview"
        android:layout_toEndOf="@+id/image_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:text="Text"
        android:textStyle="bold|italic"
        android:id="@+id/list_item_humidity_clouds_forecast_textview"
        android:layout_alignLeft="@+id/list_item_desc_forecast_textview"
        android:layout_below="@+id/list_item_wind_direction_forecast_textview"
        android:layout_toEndOf="@+id/image_view" />

</RelativeLayout>